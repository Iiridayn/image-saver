{
    "manifest_version": 2,

    "name": "Image uploader",
    "description": "This extension uploads an image intelligently from various image hosting services",
    "version": "0.1",
    "author": "Michael Clark",

    "background": {
        "scripts": ["background.js"]
    },

    "icons": {
    },

    "browser_action": {
        "default_icon": {
            "19": "icon.png"
        },
        "default_title": "Share main page image",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://www.deviantart.com/",
        "https://*.deviantart.net/",
        "https://furaffinity.net/",
        "https://d.facdn.net/",
        "activeTab",
        "contextMenus"
    ]
}
