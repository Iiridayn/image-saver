{
	"manifest_version": 2,

	"name": "Image uploader",
	"description": "This extension uploads/downloads an image intelligently from various image hosting services",
	"version": "0.2",
	"author": "Michael Clark",

	"background": {
		"scripts": ["background.js"]
	},

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"browser_action": {
		"default_icon": {
			"16": "icon16.png"
		},
		"default_title": "Share main page image",
		"default_popup": "popup.html"
	},
	"permissions": [
		"https://www.deviantart.com/",
		"https://*.deviantart.net/",
		"https://furaffinity.net/",
		"https://d.facdn.net/",
		"activeTab",
		"contextMenus",
		"downloads"
	]
}
